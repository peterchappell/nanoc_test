#!/usr/bin/env ruby

# A few helpful tips about the Rules file:
#
# * The order of rules is important: for each item, only the first matching
#   rule is applied.
#
# * Item identifiers start and end with a slash (e.g. “/about/” for the file
#   “content/about.html”). To select all children, grandchildren, … of an
#   item, use the pattern “/about/*/”; “/about/*” will also select the parent,
#   because “*” matches zero or more characters.

# Compass integration
require 'compass'
Compass.add_project_configuration('config.rb')

SITE_ROOT = '';

### --------------------------
### Stylesheets
### --------------------------

compile '/scss/*_*/' do
  # don’t compile partials
  # nil
end

compile '/scss/*/' do
  filter :sass, Compass.sass_engine_options
end

route '/scss/*_*/' do
  # don't output partials, so return nil
  nil
end

route '/scss/*/' do
  item.identifier.sub('scss','css').chop + '.css'
end

### --------------------------
### Javascript
### --------------------------

compile '/js/*' do
    # don't compile js just yet
end

route '/js/*' do
    item.identifier.chop + '.js'
end

### --------------------------
### Images
### --------------------------

compile '/img/*' do
    # don't compile js just yet
end

route '/img/*' do
    item.identifier.chop + '.' + item[:extension]
end

### --------------------------
### Media
### --------------------------

compile '/_media/*' do
    # don't compile js just yet
end

route '/_media/*' do
    # item.identifier.chop + '.' + item[:extension]
    # don't put media in output any more - it gets uploaded to S3
    nil
end

### --------------------------
### RSS
### --------------------------

compile /(rss|atom)/ do
    filter :erb unless rep.binary? # e.g. rss.png image
end

route '/(atom|rss)/' do
    item.identifier.chop + '.xml'
end

### --------------------------
### Content
### --------------------------

compile '*' do
  filter :erb
  filter :kramdown
  layout 'default'
  filter :s3_media, :type => :html, :bucket => '7mp_test'
  filter :relativize_paths, :type => :html
end

route '*' do
  item.identifier + 'index.html'
end

### --------------------------
### Layout
### --------------------------

# For production can set ':ugly' to 'true'.
# layout '*', :haml, :format => :html5, :ugly => false, :escape_html => false

layout '*', :erb
